<div class="container">
  <nav class="navbar navbar-light bg-light">
    <form class="form-inline">
      <%= link_to "Add new cocktail", new_cocktail_path, class: "btn btn-secondary"%>
    </form>
  </nav>

  <div class="container">
    <h1>Cocktails</h1>
  </div>

  <div class="card">
    <% @cocktails.each do |cocktail| %>
      <h2 class="card-header"><%= cocktail.name %></h2>
      <div class="card-body">
        <%= link_to "See details", cocktail_path(cocktail), class: "btn btn-info"%>
      </div>
    <% end %>
  </div>
</div>
