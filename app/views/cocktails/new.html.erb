<div class="container">
  <div class="row justify-content-center form">
    <div class="col-md-6">
      <h2>Create a new cocktail</h2>
          <%= simple_form_for @cocktail do |f| %>
            <%= f.input :name %>
            <%= f.input :photo, as: :file %>
            <%= f.button :submit, class: 'btn btn-ghost' %>
            <%= link_to "Back to Cocktails", cocktails_path, class: 'btn btn-ghost' %>
          <% end %>
    </div>
  </div>
</div>
