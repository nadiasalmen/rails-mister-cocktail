<div class="banner" style="background-image: linear-gradient(-225deg, rgba(204, 228, 217, 0) 0%, rgba(193, 224, 245, 0.6) 50%), url('https://source.unsplash.com/500x400/?<%= @cocktail.name %>');">
  <h1><%= @cocktail.name %></h1>
  <%= link_to "Back to Cocktails", cocktails_path, class: 'btn btn-ghost' %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Recipe</h2>
      <table class="container">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="far fa-trash-alt destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render 'doses/new' %>
    </div>
  </div>
</div>
