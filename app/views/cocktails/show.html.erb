<div class="container">
  <nav class="navbar navbar-light bg-light">
    <form class="form-inline">
      <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-outline-success my-2 my-sm-0"%>
    </form>
  </nav>

  <div class="card">
    <h1 class = "card-header"><%= @cocktail.name %></h1>
    <div class="class-body">
      <% @cocktail.doses.each do |dose| %>
        <p><em><%= dose.description %></em> - <strong><%= dose.ingredient.name %></strong></p>
      <% end %>
    </div>
  </div>
</div>
