<div class="cover" style="background-image: linear-gradient(-225deg, rgba(226, 197, 132, 0.26) 0%, rgba(105, 179, 228, 0.36) 0%), url('<%= cl_image_path @cocktail.photo.key, height: 360, :background=>"green", :crop=>"lpad" %>');">
  <div class="banner">
    <h1><%= @cocktail.name %></h1>
  </div>

  <div class="container">
    <div class="row justify-content-lg-center">
      <div class="col col-lg-center">
        <h2>Recipe</h2>
        <table class="container">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
              <th>Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="far fa-trash-alt destroy_dose"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row justify-content-lg-center">
      <div class="col col-lg-center">
        <%= render 'doses/new' %>
      </div>
    </div>
    <div class="row justify-content-lg-center">
      <div class="col col-lg-center">
        <%= link_to "Back to Cocktails", cocktails_path, class: 'btn btn-ghost' %>
      </div>
    </div>
  </div>
</div>
